<%- include('../partials/header') %>

	<div class="container">
		<header class="jumbotron">
			<div class="container">
				<h1 style="color: blue;">Campgrounds Page</h1>
				<p>View our hand-picked campgrounds from all over the world</p>
				<p>
					<a class="btn btn-outline-primary btn-large" href="/campgrounds/new">Add new campground</a>
				</p>
			</div>
		</header>

		<div class="row text-center" style="display: flex; flex-wrap: wrap;">
			<% campgrounds.forEach(function(campground){ %>
				<div class="col-md-3 col-sm-6">
					<div class="thumbnail">

						<a href="/campgrounds/<%= campground._id %>"  style="color: black; text-decoration: none;">
							<img width="100%" src="<%= campground.image %>">

							<div class="caption">
								<h4><%= campground.name %></h4>
							</div>
						</a>

					</div>
				</div>
			<% }); %>

			<hr>
		</div>

	</div>

<%- include('../partials/footer') %>